{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    <h1>Item</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ item.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ item.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class= "btn btn-primary mt-1" href="{{ path('app_item_index') }}">Retourné à la liste</a>

    <a class= "btn btn-primary mt-1" href="{{ path('app_item_edit', {'id': item.id}) }}">Modifier</a>

    {{ include('item/_delete_form.html.twig') }}
{% endblock %}
